{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./services",
    "rootDir": "./services",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": false
  },
  "include": [
    "services/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}