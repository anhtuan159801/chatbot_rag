{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": [
    "server.ts",
    "services/**/*.ts",
    "middleware/**/*.ts",
    "src/**/*.ts",
    "scripts/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-server"
  ]
}
  },
  "include": ["server.ts", "services/**/*.ts", "../shared/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist-server"]
}
