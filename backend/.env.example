# Environment Variables Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# ============================================================================
# DATABASE (Supabase)
# ============================================================================
SUPABASE_URL=postgresql://user:password@host:port/database
SUPABASE_KEY=your_supabase_anon_key

# ============================================================================
# AI MODELS
# ============================================================================
# OpenAI (optional, for GPT models)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4

# Google Gemini (required for chat)
GEMINI_API_KEY=AIzaxxxxxxxxxxxxxxxxxxxxxxxx
GEMINI_MODEL=gemini-3-flash-preview

# Hugging Face (required for embeddings)
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxxxxxxx
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# ============================================================================
# AUTHENTICATION
# ============================================================================
JWT_SECRET=super-secret-jwt-key-change-me-in-production
JWT_EXPIRES_IN=7d

# ============================================================================
# FACEBOOK INTEGRATION (optional)
# ============================================================================
FACEBOOK_PAGE_ID=your_page_id
FACEBOOK_ACCESS_TOKEN=EAAK4ltJZCqX4BPWUFQ6mZB...
FACEBOOK_PAGE_NAME=Your Page Name
FB_VERIFY_TOKEN=your_webhook_verify_token

# ============================================================================
# RAG CONFIGURATION
# ============================================================================
RAG_VECTOR_WEIGHT=0.7
RAG_KEYWORD_WEIGHT=0.3
RAG_DEFAULT_TOP_K=3

# ============================================================================
# CACHING
# ============================================================================
CACHE_TTL=3600000        # 1 hour in milliseconds
QUERY_CACHE_TTL=300000  # 5 minutes in milliseconds
RAG_CACHE_TTL=600000    # 10 minutes in milliseconds
CACHE_MAX_SIZE=1000

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW=900000       # 15 minutes in milliseconds
RATE_LIMIT_MAX=100
RATE_LIMIT_AUTH_WINDOW=900000  # 15 minutes
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_RAG_WINDOW=900000    # 15 minutes
RATE_LIMIT_RAG_MAX=50

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info  # debug, info, warn, error

# ============================================================================
# NOTES
# ============================================================================
# - Never commit .env file to version control
# - Use different API keys for development and production
# - Generate strong JWT_SECRET for production
# - Adjust RATE_LIMIT values based on your expected traffic
