# =============================================================================
# RAG CHATBOT SYSTEM ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains all environment variables needed for the chatbot RAG system.
# Copy this file to .env and fill in your actual values.

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
# Port on which the backend server will run
PORT=8080

# Base URL for the application (used for CORS and redirects)
APP_URL=http://localhost:8080

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# Supabase project URL (found in your Supabase project settings)
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase service role key (for server-side operations with full access)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Supabase anon/public key (for client-side operations)
SUPABASE_ANON_KEY=your_anon_key_here

# -----------------------------------------------------------------------------
# AI API KEYS
# -----------------------------------------------------------------------------
# Google Gemini API key (for Gemini models)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API key (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API key (alternative AI provider)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# HuggingFace API key (for embedding models and inference)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# -----------------------------------------------------------------------------
# FACEBOOK INTEGRATION
# -----------------------------------------------------------------------------
# Facebook Page ID (numeric ID of your Facebook page)
FACEBOOK_PAGE_ID=your_facebook_page_id_here

# Facebook Page Access Token (long-lived token with pages_messaging permission)
FACEBOOK_ACCESS_TOKEN=your_facebook_page_access_token_here

# Human-readable name of your Facebook page
FACEBOOK_PAGE_NAME=Your Page Name

# Facebook webhook verification token (custom string for webhook verification)
FB_VERIFY_TOKEN=dvc_verify_token_2024_secure

# Facebook App Secret (from your Facebook app settings)
FB_APP_SECRET=your_facebook_app_secret_here

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
# JWT secret key for API authentication (generate a strong random string)
JWT_SECRET=your_jwt_secret_key_here

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=60

# Rate limiting: requests per minute per IP
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# -----------------------------------------------------------------------------
# LOGGING AND MONITORING
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Enable/disable request logging
ENABLE_REQUEST_LOGGING=true

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------
# Enable development mode (additional logging and error details)
NODE_ENV=development

# Enable CORS for development (set to false in production)
ENABLE_CORS=true

# -----------------------------------------------------------------------------
# PERFORMANCE OPTIMIZATION
# -----------------------------------------------------------------------------
# Redis URL for caching (optional, improves performance)
REDIS_URL=redis://localhost:6379

# Embedding cache TTL in seconds
EMBEDDING_CACHE_TTL=3600

# Maximum chunk size for text processing
MAX_CHUNK_SIZE=1000

# -----------------------------------------------------------------------------
# MONITORING AND ALERTS
# -----------------------------------------------------------------------------
# Prometheus metrics endpoint (optional)
METRICS_ENDPOINT=/metrics

# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=30
